  <script>
    const url = "https://script.google.com/macros/s/AKfycbwsSneFh8ZspP6ZjyieT_Lb9rZgvLU_-9mxnO13SFM/dev";

    function bukaForm(jenis) {
      document.getElementById('formKarier').classList.remove('active');
      document.getElementById('formKebaikan').classList.remove('active');
      if (jenis === 'karier') {
        document.getElementById('formKarier').classList.add('active');
        window.scrollTo({ top: 500, behavior: 'smooth' });
      } else {
        document.getElementById('formKebaikan').classList.add('active');
        window.scrollTo({ top: 500, behavior: 'smooth' });
      }
    }

    async function kirimData(jenis) {
      let data = {};
      if (jenis === 'karier') {
        data = {
          nama: document.getElementById('namaKarier').value,
          pilihan: document.getElementById('pilihanKarier').value,
          bakat: document.getElementById('bakat').value,
          alasan: document.getElementById('alasanKarier').value,
          jenis: 'karier'
        };
      } else {
        data = {
          nama: document.getElementById('namaKebaikan').value,
          aksi: document.getElementById('aksi').value,
          nilai: document.getElementById('nilai').value,
          alasan: document.getElementById('alasanKebaikan').value,
          jenis: 'kebaikan'
        };
      }

      const statusEl = document.getElementById(`status${jenis.charAt(0).toUpperCase() + jenis.slice(1)}`);
      statusEl.textContent = "Mengirim data...";

      try {
        const res = await fetch(url, {
          method: "POST",
          mode: "no-cors",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data)
        });
        statusEl.textContent = "‚úÖ Data berhasil dikirim!";
      } catch (err) {
        statusEl.textContent = "‚ö†Ô∏è Gagal mengirim data.";
      }
    }
  </script>
